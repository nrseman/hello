#!/usr/bin/bash
while [[ $# -gt 0 ]]; do
	IFS='=' read -ra ADDR <<< "$1"
	case ${ADDR[0]} in
		--prefix)
		PREFIX=${ADDR[1]}
		;;
		--build)
		BUILD=${ADDR[1]}
		;;
		CONFIG_SHELL)
		CONFIG_SHELL=${ADDR[1]}
		;;
		SHELL)
		SHELL=${ADDR[1]}
		;;
	esac
	shift
done

printf "\ncheck:" >> Makefile
printf "\n\t@echo 'dummy make check!'\n" >> Makefile
printf "\ninstall:" >> Makefile
printf "\n\t@mkdir -p $PREFIX/bin" >> Makefile
printf "\n\t@cp hello $PREFIX/bin" >> Makefile
